{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "cli": "npm run build && node packages/nexus-rpc-gen/dist/index.js",
    "build:schema": "npm run build:schema --prefix packages/nexus-rpc-gen",
    "lint": "eslint packages/*/src/** packages/nexus-rpc-gen-tests/languages/ts/src/**",
    "lint:fix": "eslint --fix packages/*/src/** packages/nexus-rpc-gen-tests/languages/ts/src/**",
    "test": "npm test --workspaces --if-present"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "eslint": "^9.37.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unicorn": "^61.0.2",
    "typescript-eslint": "^8.46.0",
    "yaml": "^2.8.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
